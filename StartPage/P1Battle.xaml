<Window x:Class="StartPage.P1Battle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartPage"
        mc:Ignorable="d"
        Title="P1Battle" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        >
    
    <Grid HorizontalAlignment="Right" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="222*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="347*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <ProgressBar HorizontalAlignment="Left" Height="19" Margin="232,7,0,0" VerticalAlignment="Top" Width="131" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Background="#FF37FF00" Foreground="#FFFF3A00"/>
        <Label Content="PokeName" HorizontalAlignment="Left" Margin="137,7,0,0" VerticalAlignment="Top" Height="39" Width="89" Grid.Column="3" Grid.Row="1"/>
        <ProgressBar HorizontalAlignment="Left" Height="20" Margin="96,80,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" Grid.Row="2" Foreground="#FFFF2B00" Background="#FF00FF2F"/>
        <Label Content="PokeName" HorizontalAlignment="Left" Margin="21,71,0,0" VerticalAlignment="Top" Height="40" Width="82" Grid.ColumnSpan="2" Grid.Row="2"/>
        <Image HorizontalAlignment="Left" Height="154" Margin="12,111,0,0" VerticalAlignment="Top" Width="153" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>
        <Image HorizontalAlignment="Left" Height="154" Margin="165,52,0,0" VerticalAlignment="Top" Width="153" Grid.Column="3" Grid.RowSpan="3" Grid.Row="1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="12,30,0,0" VerticalAlignment="Top" Height="60" Width="155" Grid.Column="3" Grid.Row="3" Background="Red" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="174,30,0,0" VerticalAlignment="Top" Height="60" Width="155" Grid.Column="3" Grid.Row="3" Background="#FFFF0000" Foreground="Black"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="12,96,0,0" VerticalAlignment="Top" Height="60" Width="155" Grid.Column="3" Grid.Row="3" Background="#FFFF0000"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="173,96,0,0" VerticalAlignment="Top" Height="60" Width="155" RenderTransformOrigin="0.5,0.5" Grid.Column="3" Grid.Row="3" Background="#FFFF0000"/>
        <Label Content="Player 2s Turn" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" Height="55" Width="200" FontSize="25" Grid.Column="1" Grid.Row="1"/>
     
    </Grid>
</Window>
