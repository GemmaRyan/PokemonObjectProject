<Window x:Class="StartPage.P1Battle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartPage"
        mc:Ignorable="d"
         Title="Battle" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10,10,10,10">

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal" Height="69" Margin="0,295,0,0"/>
        <Button x:Name="Move4Btn" Margin="353,238,127,71" Click="Move_Click"/>
        <Button x:Name="Move3Btn" Margin="458,238,22,71" Click="Move_Click"/>
        <Button x:Name="Move2Btn" Margin="458,302,22,7" Click="Move_Click"/>
        <Button x:Name="Move1Btn" Margin="353,302,127,0" Click="Move_Click" Height="54" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ActiveHealth" Margin="174,102,247,238"/>
        <Image x:Name="ActiveImg" Margin="42,190,388,23" />
        <Image x:Name="OpponentImg" Margin="405,97,39,159" />
        <ProgressBar x:Name="OpponentHealth" Margin="412,32,16,311"/>
        <TextBlock x:Name="OpponentName" TextWrapping="Wrap" Text="TextBlock" Margin="224,32,173,291" Foreground="Black" Background="#FFFDFDFD"/>
        <TextBlock x:Name="ActiveName" TextWrapping="Wrap" Text="TextBlock" Margin="10,100,411,213" Foreground="Black" Background="White"/>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/background2.png"
                    Stretch="UniformToFill" />
        </Grid.Background>
    </Grid>
</Window>
